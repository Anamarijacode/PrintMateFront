<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:background="@drawable/rounded_layout"
    android:padding="12dp">

    <ImageView
        android:id="@+id/printerSlika"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/printerNaziv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/actor"
        android:text="Naziv printera"
        android:textColor="@color/text_color"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/printerSlika"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/printerSlika"/>

    <TextView
        android:id="@+id/printerStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Online"
        android:textColor="@color/printMateDarkPurlupel"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/printerSlika"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/printerNaziv"/>
</androidx.constraintlayout.widget.ConstraintLayout>
