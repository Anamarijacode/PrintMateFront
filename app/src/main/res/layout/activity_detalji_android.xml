<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Activity.DetaljiAndroidActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="387dp"
        android:layout_height="67dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounden_layout_naslov"
        app:layout_constraintBottom_toTopOf="@+id/containerLayoutAndroid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textNaslovDetaljiAndroid"
            android:layout_width="398dp"
            android:layout_height="79dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/actor"
            android:gravity="center"
            android:text="@string/naslov_android"
            android:textColor="@color/text_color_primary"
            android:textSize="22dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/containerLayoutAndroid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="376dp"
            android:layout_height="585dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_layout_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">

            <TextView
                android:id="@+id/podnaslov1Android"
                android:layout_width="346dp"
                android:layout_height="21dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="14dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/podnaslov_a_android"
                android:textColor="@color/text_upute"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text1Android"
                android:layout_width="346dp"
                android:layout_height="269dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/actor"
                android:text="@string/lista_podnaslovAA_android"
                android:textColor="@color/text_upute"
                android:textSize="17dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/podnaslov1Android" />

            <ImageView
                android:id="@+id/slikaAkoIma1Android"
                android:layout_width="336dp"
                android:layout_height="190dp"
                android:layout_marginStart="19dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="21dp"
                android:src="@drawable/octo4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text1Android" />

            <TextView
                android:id="@+id/podnaslov2Android"
                android:layout_width="344dp"
                android:layout_height="26dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="27dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/podnaslov_b_android"
                android:textColor="@color/text_upute"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/slikaAkoIma1Android" />

            <TextView
                android:id="@+id/text2Android"
                android:layout_width="352dp"
                android:layout_height="216dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/actor"
                android:text="@string/lista_podnaslovBB_android"
                android:textColor="@color/text_upute"
                android:textSize="17dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/podnaslov2Android" />

            <ImageView
                android:id="@+id/slikaAkoImaAndroid"
                android:layout_width="336dp"
                android:layout_height="190dp"
                android:layout_marginStart="19dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="21dp"
                android:src="@drawable/octoeverywhere_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text2Android" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonfowordAndroid"
        android:layout_width="130dp"
        android:layout_height="34dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_button_6558f_color"
        android:drawableRight="@drawable/arrow_forword"
        android:fontFamily="@font/actor"
        android:paddingEnd="10dp"
        android:text="@string/nastvi_btn"
        android:textAllCaps="false"
        android:textColor="@color/printMateWhite"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonbackAndroid"
        app:layout_constraintTop_toBottomOf="@+id/containerLayoutAndroid" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonbackAndroid"
        android:layout_width="130dp"
        android:layout_height="34dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="93dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_button_6558f_color"
        android:drawableLeft="@drawable/arrow_back"
        android:fontFamily="@font/actor"
        android:paddingStart="10dp"
        android:text="@string/vrati_se"
        android:textAllCaps="false"
        android:textColor="@color/printMateWhite"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonfowordAndroid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/containerLayoutAndroid" />

</androidx.constraintlayout.widget.ConstraintLayout>
