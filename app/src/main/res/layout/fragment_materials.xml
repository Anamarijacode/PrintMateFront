<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app   ="http://schemas.android.com/apk/res-auto"
    xmlns:tools ="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragmenti.MaterialsFragment"
    android:id="@+id/materialsFragment">

    <LinearLayout
        android:id="@+id/emptyStateLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.037"
        android:layout_width="363dp"
        android:layout_height="153dp"
        android:layout_margin="24dp"
        android:background="@color/nav_item_secondery"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="46dp">

        <ImageView
            android:layout_width="126dp"
            android:layout_height="111dp"
            android:padding="8dp"
            android:src="@drawable/filament_filled" />

        <TextView
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="Filamenti"
            android:textColor="@color/printMateDarkPurlupel"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/emptyStateLayout2"
        android:layout_width="363dp"
        android:layout_height="153dp"
        android:layout_margin="24dp"
        android:background="@color/nav_item_secondery"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.357">

        <ImageView
            android:layout_width="126dp"
            android:layout_height="111dp"
            android:padding="8dp"
            android:src="@drawable/baseline_extension_24" />

        <TextView
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="Rezervni dijelovi"
            android:textColor="@color/printMateDarkPurlupel"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/emptyStateLayout2Popis"
        android:layout_width="363dp"
        android:layout_height="153dp"
        android:layout_margin="24dp"
        android:background="@color/nav_item_secondery"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.666">

        <ImageView
            android:layout_width="126dp"
            android:layout_height="111dp"
            android:padding="8dp"
            android:src="@drawable/baseline_shopping_cart_24" />

        <TextView
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="Popis za kupovinu"
            android:textColor="@color/printMateDarkPurlupel"
            android:textSize="24sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>